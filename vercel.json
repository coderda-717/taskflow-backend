{
  "version": 2,
  "builds": [
    {
      "src": "taskflow_api/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "taskflow_api/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "taskflow_api.settings"
  }
}